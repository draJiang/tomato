{
    "manifest_version": 3,
    "name": "Tomato Bank",
    "description": "Manage your time with Tomato Bank",
    "version": "0.0.7",
    "action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/vendor.js",
            "js/content_script.js"
        ]
    }],
    "options_page": "options.html",
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}